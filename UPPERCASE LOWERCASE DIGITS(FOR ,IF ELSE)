// lowercase uppercase digits

#include<stdio.h>

void main()
{
int i;
int lowercase=0,uppercase=0,digits=0;

char ch[100];

printf("enter the string:\n");
gets(ch);

for(i=0;ch[i]!=0;i++)

if(ch[i]>='A'&&ch[i]<='Z')
{
uppercase++;
}
else
if(ch[i]>='a'&&ch[i]<='z')
{
lowercase++;
}
else
{
digits++;
}
printf("lowercase letters : %d",lowercase);
printf("\nuppercase letters :  %d",uppercase);
printf("\ndigits : %d",digits);
getch();
return 0;
}
